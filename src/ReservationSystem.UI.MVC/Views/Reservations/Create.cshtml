@model ReservationSystem.DATA.EF.Reservation

@{
    ViewBag.Title = "Create";
}

<div class="home">
    <div class="background_image" style="background-image:url(../../Content/images/booking.jpg)"></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content text-center">
                        <div class="home_title">Book the <br/>@ViewBag.RoomName</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
         <h3 style="color: #ffa37b;">@ViewBag.Error</h3>
        <br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CustomerId, "Who's Staying?", htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.DropDownList("CustomerId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class=" col-md-6 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RoomId, "Room", htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.DropDownList("RoomId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NumberOfGuests, "# of Guests", htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.NumberOfGuests, new { htmlAttributes = new { @class = "form-control", placeholder = ViewBag.NumberOfGuests } })
                            @Html.ValidationMessageFor(model => model.NumberOfGuests, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class=" col-md-4 col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ReservationStartDate, "Check In", htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.ReservationStartDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.ReservationStartDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class=" col-md-4 col-lg-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ReservationEndDate, "Check Out", htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.ReservationEndDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                            @Html.ValidationMessageFor(model => model.ReservationEndDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-9 col-lg-10">
                        <input type="submit" value="Create" class="button button_1" />
                        <br /><br />
                    </div>

                    <div class=" col-md-3 col-lg-2">
                        <div class="button button_4"><a href="@Url.Action("Index", "Rooms")">Back to Rooms</a></div>
                        <br /><br />
                    </div>
                </div>
            </div>
        </div>
    </div>
     <hr />
     }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
