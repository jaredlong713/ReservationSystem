@model ReservationSystem.DATA.EF.Reservation

@{
    ViewBag.Title = "Delete";
}

<div class="home">
    <div class="background_image" style="background-image:url(/Content/images/Location.jpg)"></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content text-center">
                        <div class="home_title">Delete Reservation</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <br/>
    <h3>Are you sure you want to delete this Reservation?</h3>
    <div>
        <h4>Reservation</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Number of Guests
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOfGuests)
            </dd>

            <dt>
                Date Added
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateAdded)
            </dd>

            <dt>
                Active
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt>
                Check In
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReservationStartDate)
            </dd>

            <dt>
                Check Out
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReservationEndDate)
            </dd>

            <dt>
                Name on Reservation
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserFamilyMember.MemberName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="row">
                    <div class="col-md-9 col-lg-10">
                        <input type="submit" value="Delete" class="button button_1" />
                        <br /><br />
                    </div>

                    <div class=" col-md-3 col-lg-2">
                        <div class="button button_4"><a href="@Url.Action("Index", "Reservations")">Back to Reservations</a></div>
                        <br /><br />
                    </div>
                </div>
            </div>
        }
    </div>
    </div>