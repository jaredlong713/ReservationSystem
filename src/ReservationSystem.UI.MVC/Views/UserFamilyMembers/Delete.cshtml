@model ReservationSystem.DATA.EF.UserFamilyMember

@{
    ViewBag.Title = "Delete";
}

<div class="home">
    <div class="background_image" style="background-image:url(../../Content/images/about.jpg)"></div>
    <div class="home_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="home_content text-center">
                        <div class="home_title">Delete Family Member</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <br/>
